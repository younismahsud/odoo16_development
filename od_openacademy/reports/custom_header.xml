<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="external_layout_standard_openacademy" inherit_id="web.external_layout_standard">
        <xpath expr="//div[1]" position="replace">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="row" style="font-family: 'Trebuchet MS', sans-serif;">
                    <div class="col-5 mb4">
                        <div t-field="company.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        />
                    </div>
                    <div class="col-2 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 80px;" alt="Logo"/>
                    </div>
                    <div class="col-5 mb4 text-right">
                        <div t-if="report_type == 'pdf'" class="text-muted">
                            Page: <li class="list-inline-item"><strong><span class="page"/> / <span class="topage"/></strong></li>
                        </div>
                        <div>
                            Print date: <span t-esc="datetime.date.today().strftime('%Y-%m-%d %H:%M')"/>
                        </div>
                    </div>
                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="external_layout_boxed_openacademy" inherit_id="web.external_layout_boxed">
