<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.openacademy</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                    string="OpenAcademy"
                    data-string="OpenAcademy"
                    data-key="od_openacademy">
                    <h2>OpenAcademy Settings</h2>
                    <div class="row mt16 o_settings_container" name="catalog_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="session_number_of_seats">
                            <div class="o_setting_left_pane">
                                <field name="use_number_of_seats"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="use_number_of_seats"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Set a default no. of seats on your sessions
                                </div>
                                <div class="content-group"  attrs="{'invisible': [('use_number_of_seats','=',False)]}">
                                    <div class="mt16">
                                        <span class="col-lg-3">Default Limit: <field name="session_number_of_seats" attrs="{'required': [('use_number_of_seats', '=', True)]}"/> Seats</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" id="od_openacademy_website">
                            <div class="o_setting_left_pane">
                                <field name="module_od_openacademy_website"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_od_openacademy_website" string="OpenAcademy Website"/>
                                <div class="text-muted">
                                    Add OpenAcademy Website Portal
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_openacademy_config_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'od_openacademy', 'bin_size': False}</field>
    </record>

    <menuitem id="menu_openacademy_config"
              name="Configuration"
              parent="menu_openacademy_root"
              groups="od_openacademy.group_openacademy_manager"
              sequence="50">

        <menuitem id="menu_openacademy_general_settings"
                  name="Settings"
                  sequence="10"
                  action="action_openacademy_config_settings"/>

    </menuitem>

</odoo>