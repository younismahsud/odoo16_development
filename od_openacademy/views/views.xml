<odoo>
    <data>

        <record model="ir.ui.view" id="od_openacademy_course_tree_16">
            <field name="name">od_openacademy.course.tree</field>
            <field name="model">od_openacademy.course</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="od_openacademy_course_tree_15">
            <field name="name">od_openacademy.course.tree</field>
            <field name="model">od_openacademy.course</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="course_date"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="od_openacademy_course_form">
            <field name="name">od_openacademy.course.form</field>
            <field name="model">od_openacademy.course</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="button_in_progress" type="object" string="In Progress" class="oe_highlight" states="draft"/>
                        <button name="button_completed" type="object" string="Completed" class="oe_highlight" states="in_progress"/>
                        <button name="button_cancel" type="object" string="Cancel" class="oe_highlight" states="in_progress,completed"/>
                        <button name="button_draft" type="object" string="Reset to Draft" class="oe_highlight" states="cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Course Title"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="responsible_id"/>
                                <field name="course_date"/>
                                <field name="company_info"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sessions">
                                <field name="session_ids">
                                    <tree class="custom_class">
                                        <field name="name"/>
                                        <field name="start_date"/>
                                        <field name="duration"/>
                                        <field name="seats"/>
                                        <field name="company_id"/>
                                        <field name="instructor_id"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group string="General">
                                                <field name="name"/>
                                                <field name="company_id"/>
                                                <field name="instructor_id"/>
                                                <field name="seats"/>
                                            </group>
                                            <group string="Dates">
                                                <field name="start_date"/>
                                                <field name="duration"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="od_openacademy_course_search">
            <field name="name">od_openacademy.course.search</field>
            <field name="model">od_openacademy.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Course Title"/>
                    <field name="description" string="Course Description"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="course_list_action">
            <field name="name">Courses</field>
            <field name="res_model">od_openacademy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="od_openacademy_course_tree_15"/>
        </record>

        <menuitem id="menu_openacademy_root" name="OpenAcademy" sequence="10"/>
        <menuitem id="menu_openacademy" parent="menu_openacademy_root" name="OpenAcademy" sequence="10"/>
        <menuitem id="menu_courses" parent="menu_openacademy" name="Course" sequence="10" action="course_list_action"/>

        <record model="ir.ui.view" id="session_form_view">
            <field name="name">session.form</field>
            <field name="model">od_openacademy.session</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="seats"/>
                            <field name="instructor_id" domain="[('instructor', '=', True)]"/>
                            <field name="course_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="taken_seats" widget="progressbar"/>
<!--                            <field name="attendee_ids" widget="many2many_tags"/>-->
                        </group>
                        <notebook>
                            <page string="Attendees">
                                <field name="attendee_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="od_openacademy_session_tree">
            <field name="name">od_openacademy.session.tree</field>
            <field name="model">od_openacademy.session</field>
            <field name="arch" type="xml">
                <tree decoration-bf="duration==2" decoration-danger="duration==2" decoration-success="start_date==today">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                    <field name="instructor_id"/>
                    <field name="course_id"/>
                    <field name="taken_seats" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="od_openacademy_session_calendar">
            <field name="name">od_openacademy.session.calendar</field>
            <field name="model">od_openacademy.session</field>
            <field name="arch" type="xml">
                <calendar string="Sessions" date_start="start_date" color="instructor_id">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="duration"/>
                    <field name="seats"/>
                    <field name="instructor_id"/>
                    <field name="course_id"/>
                    <field name="taken_seats" widget="progressbar"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="od_openacademy_session_search">
            <field name="name">od_openacademy.session.search</field>
            <field name="model">od_openacademy.session</field>
            <field name="arch" type="xml">
                <search string="Sessions">
                    <field name="name" string="Name and Course" filter_domain="['|', ('name', 'ilike', self), ('course_id', 'ilike', self)]"/>
                    <field name="instructor_id"/>
                    <filter name="instructor_id" string="My Sessions" domain="[('instructor_id', '=', uid)]"/>
                    <group string="Group By">
                        <filter name="course_id" string="Course" context="{'group_by': 'course_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">od_openacademy.session</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="context">{'search_default_course_id': 1}</field>
        </record>

        <menuitem id="session_menu" name="Sessions"
                  parent="menu_openacademy"
                  action="session_list_action"/>

    </data>
</odoo>